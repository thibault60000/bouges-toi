enum Permission {
  ADMIN
  USER
  ARTICLECREATE
  ARTICLEUPDATE
  ARTICLEDELETE
  RUBRIQUECREATE
  RUBRIQUEUPDATE 
  RUBRIQUEDELETE 
  CATEGORYCREATE
  CATEGORYUPDATE
  CATEGORYDELETE
  PERMISSIONUPDATE
  PREMIUM
}

type CartItem {
  id: ID! @id
  quantity: Int! @default(value: 1)
  premiumOffer: PremiumOffer
  user: User!
}

type OrderItem {
  id: ID! @id
  title: String!
  description: String!
  price: Int!
  quantity: Int! @default(value: 1)
  user: User
}

type Order {
  id: ID! @id
  items: [OrderItem!]!
  total: Int!
  user: User!
  charge: String!
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

type User {
  id: ID! @id
  name: String!
  surname: String!
  email: String! @unique
  password: String!
  resetToken: String
  resetTokenExpiry: Float
  permissions: [Permission] @scalarList(strategy:RELATION)
  cart: [CartItem!]!
}

type Article {
  id: ID! @id
  title: String!
  description: String!
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  image: String
  userNumber: Int
  maxUserNumber: Int
  greatImage: String
  price: Int!
  user: User!
}

type Category {
  id: ID! @id
  title: String!
  description: String!
}

type Rubrique {
  id: ID! @id
  title: String!
  image: String
  user: User!
}

type RubriqueNumber {
  id: ID! @id
  number: Int
}

type PremiumOffer {
  id: ID! @id
  title: String!
  description: String!
  price: Int!
  user: User!
  multiple: Boolean @default(value: false)
}