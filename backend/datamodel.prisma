enum Permission {
  ADMIN
  USER
  ARTICLECREATE
  ARTICLEUPDATE
  ARTICLEDELETE
  RUBRIQUECREATE
  RUBRIQUEUPDATE 
  RUBRIQUEDELETE 
  CATEGORYCREATE
  CATEGORYUPDATE
  CATEGORYDELETE
  PERMISSIONUPDATE
  PREMIUM
}

type CartItem {
  id: ID! @id
  quantity: Int! @default(value: 1)
  premiumOffer: PremiumOffer
  user: User!
}

type OrderItem {
  id: ID! @id
  title: String!
  description: String!
  price: Int!
  quantity: Int! @default(value: 1)
  user: User
}

type Order {
  id: ID! @id
  items: [OrderItem!]!
  total: Int!
  user: User!
  charge: String!
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

type User {
  id: ID! @id
  name: String!
  surname: String!
  email: String! @unique
  password: String!
  resetToken: String
  resetTokenExpiry: Float
  permissions: [Permission] @scalarList(strategy:RELATION)
  cart: [CartItem!]!
  picture: String!
  articles: [Article!]! @relation(name: "Creator")
  memberOf: [Article!]! @relation(name: "UserOf")
}

type Article {
  id: ID! @id
  title: String!
  description: String!
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  rubrique: Rubrique!
  category: Category!
  image: String!
  nbPersons: Int!
  greatImage: String!
  adresse: String!
  begin_date: DateTime!
  end_date: DateTime!
  price: Int!
  user: User! @relation(name: "Creator")
  users: [User!]! @relation(name: "UserOf")
}

type Category {
  id: ID! @id
  title: String!
  rubrique: Rubrique!
}

type Rubrique {
  id: ID! @id
  title: String!
  image: String
  user: User!
}

type RubriqueNumber {
  id: ID! @id
  number: Int
}

type PremiumOffer {
  id: ID! @id
  title: String!
  description: String!
  price: Int!
  user: User!
  multiple: Boolean @default(value: false)
}